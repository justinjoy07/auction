#BUILD IMAGE
docker build -t auctionimage .

#RUN Container
docker run -d --name auction --net=host auctionimage

#Create 10 bidders
import requests
payload="{\"bidder_id\": \"1\"}"
for i in range(1,11):
    p_payload=payload.replace('1',str(i))
    requests.post("http://localhost:8000/register",data = p_payload)

#List bidders
